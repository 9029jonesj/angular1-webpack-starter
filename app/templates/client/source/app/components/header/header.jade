- require('./header.styl')
- var logoPng = require('../_layout/logo.png')
nav.blue
    .nav-wrapper
        img.logo(src= logoPng)
        a.brand-logo(ui-sref="root.layout.home.all") Aio Angular App
        ul.right
            li 
                a(ui-sref="root.layout.login.all", ng-if="!vm.isLoggedIn")
                    i.mdi-action-account-circle
            li.hide-sm
                span.header-user-name(ng-if="vm.isLoggedIn") {{vm.userInfo.name}}
            li(ng-if="vm.isLoggedIn")
                a.dropdown-button(ui-sref="root.layout.login.all", ng-if="!vm.isLoggedIn", data-activities="header-dropdown-content")
                    i.material-icons more-vert    
                ul#header-dropdown-content.dropdown-content
                    li.hide-gt-sm(ng-if="vm.isLoggedIn")
                        span {{vm.userInfo.name}}
                    li.hide-gt-sm.divider
                    li
                        a(ui-sref="root.layout.login.all({action: 'logout'})")
                            i.mdi-action-exit-to-app
                            | Logout
                        
                    
